<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/view_tv_left"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:clickable="true"
        android:textColor="@color/segement_textcolor_selector"
        android:background="@drawable/segement_unlock_selector"
        android:text="未加锁"/>
    
    
    <TextView 
         android:id="@+id/view_tv_right"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:clickable="true"
        android:textColor="@color/segement_textcolor_selector"
        android:background="@drawable/segement_lock_selector"
        android:text="加锁"/>

</LinearLayout>